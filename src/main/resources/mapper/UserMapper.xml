<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wtx.myblog.mapper.UserMapper">
    <insert id="insertUser">
        insert into user(phone,username,password,gender,avatarImgUrl) values(#{phone},#{username},#{password},#{gender},#{avatarImgUrl})
    </insert>
    <update id="updateRecentlyLanded">
        update user set recentlyLanded = #{recentlyLanded} where phone = #{phone}
    </update>
    <insert id="updateRoleByUserId">
        insert into user_role(Role_id,User_id) values (#{roleId},#{userId})
    </insert>

    <select id="findUserByPhone" resultType="com.wtx.myblog.model.User">
        SELECT * FROM user WHERE phone = #{phone}
    </select>
    <select id="userNameIsExit" resultType="com.wtx.myblog.model.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
    <select id="phoneIsExit" resultType="com.wtx.myblog.model.User">
        SELECT * FROM user WHERE phone = #{phone}
    </select>
    <select id="queryRolesBYPhone" resultType="com.wtx.myblog.model.Role">
        SELECT r.* FROM role r
                            JOIN user_role ur ON r.id = ur.Role_id
                            JOIN user u ON u.id = ur.User_id
        WHERE u.phone = #{phone}
    </select>
    <select id="queryRolesBYUserName" resultType="com.wtx.myblog.model.Role">
        SELECT r.* FROM role r
                            JOIN user_role ur ON r.id = ur.Role_id
                            JOIN user u ON u.id = ur.User_id
        WHERE u.username = #{username}
    </select>
    <select id="getUserPersonalInfo" resultType="com.wtx.myblog.model.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
    <select id="getUserNameById" resultType="java.lang.String">
        SELECT username FROM user WHERE id = #{id}
    </select>
</mapper>

