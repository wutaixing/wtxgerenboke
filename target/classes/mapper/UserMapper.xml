<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wtx.myblog.mapper.UserMapper">
    <insert id="insertUser">
        INSERT INTO user(phone, username, password, gender, avatarImgUrl)
        VALUES (#{phone}, #{username}, #{password}, #{gender}, #{avatarImgUrl});
    </insert>
    <insert id="updateRoleByUserId">

        INSERT INTO user_role(User_id, Role_id)
        VALUES (#{userId},#{roleId});
    </insert>
    <update id="updateRecentlyLanded">
        UPDATE user SET recentlyLanded = #{recentlyLanded} WHERE phone = #{phone};
    </update>

    <select id="findUserByPhone" resultType="com.wtx.myblog.model.User">
        select * from user where phone = #{phone};
    </select>

    <select id="userNameIsExit" resultType="com.wtx.myblog.model.User">
        select * from user where username = #{username};
    </select>
    <select id="phoneIsExit" resultType="com.wtx.myblog.model.User">
        select * from user where phone = #{phone};
    </select>
    <select id="queryRolesBYPhone" resultType="com.wtx.myblog.model.Role">
        SELECT
            name
        FROM
            role
        WHERE
            id IN (
                SELECT
                    ur.Role_id
                FROM
                    USER u
                        JOIN user_role ur ON u.id = ur.User_id
                WHERE
                    u.phone = #{phone}
            );
    </select>

</mapper>